@model TentsTrailersIAD.Models.Parent
@{
    ViewBag.Title = "Contact";
}

<h1>Contact Members</h1>
<head>
    @Styles.Render("~/Content/MyScripts/Style.css")
</head>

@using (Html.BeginForm("ContactInfo", "Home", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        
        <hr />
        @*<div class="form-group">
                @Html.LabelFor(m => m.To, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.To, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.To)
                </div>
            </div>*@
        <div class="form-group">
            @Html.LabelFor(m => m.Member.Email, "Email To *" ,new { @class = "col-md-2 control-label" })
            <div class="col-md-10">

                @Html.ListBoxFor(m => m.SelectedMembers, Model.Members)
                @Html.ValidationMessageFor(m => m.Member.Email, "", new { @class = "text-danger" })
            </div>
        </div>
      

        <div class="form-group">
            @Html.LabelFor(m => m.BulkEmail.From, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.BulkEmail.From, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.BulkEmail.From, "", new { @class = "text-danger" })
            </div>
        </div>
    
        <div class="form-group">
            @Html.LabelFor(m => m.BulkEmail.Subject, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.BulkEmail.Subject, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.BulkEmail.Subject)
            </div>
        </div>
     

        <div class="form-group">
            @Html.LabelFor(m => m.BulkEmail.Body, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.BulkEmail.Body, new { @class = "form-control",@id = "mytextarea" })
                @Html.ValidationMessageFor(m => m.BulkEmail.Body)
            </div>
        </div>
      

        <div class="form-group">
            @Html.LabelFor(m => m.BulkEmail.Upload,"Attachment", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <input type="file" name="upload" />
            </div>
        </div>
    

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class=" btn btn-success" value="Send" />
            </div>
        </div>
        </div>
        }
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
<script>
    tinymce.init({
        selector: "#mytextarea"
    });
            </script>
        }
