@model TentsTrailersIAD.Models.Registration

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <head>
        @Styles.Render("~/Content/MyScripts/Style.css")
    </head>


<h1>Event Booking</h1>
<h3>Confirmation</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    if (@ViewBag.Result != null)
    {
        <div class="alert alert-danger">@ViewBag.Result</div>
    }

<div class="form-horizontal">
    <h4>Please confirm your details</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.MemberId, "Full Name *", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("MemberId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MemberId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BookingId, " Booking Confirmation *", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("BookingId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.BookingId, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div>
                <input type="submit" value="Save & Continue" class="btn btn-success" id="space" />
            </div>
            <div>
                <a href="/Campsites/ListView" class="btn btn-success">Back</a>
            </div>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
